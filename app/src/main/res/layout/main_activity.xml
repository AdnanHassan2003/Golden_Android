<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/animi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Learning."
        android:textColor="@color/colorText"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>


    <TextView
        android:id="@+id/animi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="learn something from anywhere"
        android:textColor="@color/colorblack1"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/animi3"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/background_img" />

    <LinearLayout
        android:id="@+id/animi4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_solid"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter User"
            app:hintTextColor="@color/black"
            app:startIconDrawable="@drawable/ic_profile_user"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusTopEnd="30dp"
            app:boxCornerRadiusBottomStart="30dp"
            app:boxCornerRadiusTopStart="30dp"
            app:boxStrokeColor="@color/colorPrimary"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter Password"
            app:hintTextColor="@color/black"
            app:passwordToggleEnabled="true"
            app:startIconDrawable="@drawable/ic_profile_password"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusTopEnd="30dp"
            app:boxCornerRadiusBottomStart="30dp"
            app:boxCornerRadiusTopStart="30dp"
            app:boxStrokeColor="@color/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/animi7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="236dp"
        android:layout_marginTop="8dp"
        android:text="Forgot your password ?"
        android:textColor="@color/colorblack1" />

    <LinearLayout
        android:id="@+id/animi5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="204dp"
            android:layout_height="100dp"
            android:layout_marginTop="14dp">

            <ProgressBar
                android:id="@+id/progres_par"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="140dp"
                android:visibility="gone"/>

        </LinearLayout>





    <LinearLayout
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="2dp">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="27dp"
            android:text="Sign In"
            android:textColor="@color/colorText"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
        android:id="@+id/btn_login"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/login_btn"
        android:layout_marginLeft="10dp"/>



  </LinearLayout>

    </LinearLayout>





    <LinearLayout
        android:id="@+id/animi6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't you have an accont?"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Create"
            android:textColor="@color/colorblack"/>




    </LinearLayout>






</LinearLayout>



