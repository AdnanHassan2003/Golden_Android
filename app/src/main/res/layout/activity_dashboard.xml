                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/card_view"
                android:scrollbars="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
