<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Golden" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">#E3E1DD</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.Golden1" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#E3E1DD</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFC107</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <!-- light mode -->

    <!-- Screen background if light mode on -->
    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>


    <style name="SCREENexam">
        <item name="android:background">@drawable/card_view</item>
    </style>

    <!-- text color high -->
    <style name="TEXT">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <!-- text color low -->
    <style name="TEXTNORMAL">
        <item name="android:textColor">@color/colorblack1</item>

    </style>

    <!-- Edit text background -->
    <style name="EditTextBackground">
        <item name="android:background">@drawable/edit_solid</item>
        <item name="android:hint">@color/colorblack1</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="EditText.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">nomal</item>
        <item name="android:textColorHint">@color/colorblack</item>
        <item name="hintTextColor">@color/colorblack</item>
        <item name="hintEnabled">true</item>
    </style>



    <style name="textview_style">
      <item name = "android:textColor">@color/colorText</item>
    </style>



</resources>